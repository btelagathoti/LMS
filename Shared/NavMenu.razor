@using Microsoft.AspNetCore.Components

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Library MS</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill"></i> Home
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="books">
                <i class="bi bi-book"></i> Books
            </NavLink>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="books/create">
                    <i class="bi bi-plus-circle"></i> Add New Book
                </NavLink>
            </div>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="members">
                <i class="bi bi-people"></i> Members
            </NavLink>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="members/create">
                    <i class="bi bi-person-plus"></i> Add New Member
                </NavLink>
            </div>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="borrowings">
                <i class="bi bi-arrow-left-right"></i> Borrowings
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reports">
                <i class="bi bi-file-earmark-text"></i> Reports
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
} 